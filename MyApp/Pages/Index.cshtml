@page
@model MyApp.IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>MyApp</h1>

<div id="app">

    <div class="card border-primary">
        <div class="card-header">
            Add New Movie
        </div>
        <div class="card-body">
            <input v-model="name" name="Name" placeholder="Name" class="form-control" />
            <input v-model="year" name="Year" placeholder="Year" class="form-control" />

            <button class="btn btn-primary" v-on:click="addMovie"> Add</button>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Year</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
            <tr v-for="(item,index) in movieList">
                <td>
                    {{index+1}}
                </td>
                <td>
                    {{item.name}}
                </td>
                <td> {{item.year}}</td>
                <td>
                    <button class="btn btn-danger" v-on:click="removeMovie(index,item)">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>

</div>

@section styles{ 
    <link href="~/lib/toastr/toastr.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script>

        var app = new Vue({
            el: "#app",
            data: {
                movieList: [],
                name: "",
                year: null   
            },
            mounted: function () {
                console.log("Mouted");
                this.getMovieList();
            },

            methods: {
                removeMovie: function (index,selectedMovie) {
                    var vm = this;
                    

                    $.ajax({
                        url: "/api/movie",
                        method: "DELETE",
                        contentType: "application/json",
                        data: JSON.stringify(selectedMovie)
                    }).done(function () {
                        console.log("done");
                        vm.movieList.splice(index, 1);
                        toastr.success("Movie removed.");

                    }).fail(function () {
                        toastr.error("Error removing movie!");
                    });

                },
                addMovie: function () {
                    var vm = this;

                    var newMovie = {
                        name: vm.name,
                        year: vm.year
                    }

                    $.ajax({
                        url: "/api/movie",
                        method: "POST",
                        contentType:"application/json",
                        data: JSON.stringify(newMovie)
                    }).done(function () {
                        console.log("done");
                        vm.movieList.splice(0, 0, newMovie);  
                        toastr.success("Movie added.");

                    }).fail(function () {
                        toastr.error("Error!");
                    }).always(function () {
                        vm.name = "";
                        vm.year = null;
                    });

                
                },
                getMovieList: function () {
                    console.log("Getting Movie List");

                    var vm = this;

                    $.ajax({ url: "/api/movie", method: "GET" })
                        .done(function (data) {
                            vm.movieList = data;
                            console.table(data);
                        })

                }
            }
        });

    </script>
}